<project xmlns="http://maven.apache.org/POM/4.0.0" xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance" xsi:schemaLocation="http://maven.apache.org/POM/4.0.0 http://maven.apache.org/xsd/maven-4.0.0.xsd">
	<modelVersion>4.0.0</modelVersion>
	<groupId>social_networking_app</groupId>
	<artifactId>social_networking_app</artifactId>
	<version>0.0.8-SNAPSHOT</version>
	<name>social_networking_app</name>
	<description>Similar to Twitter</description>

	<distributionManagement>
		<downloadUrl>https://github.com/vabhagurkar/demoTwitter</downloadUrl>
		<repository>
			<id>releases</id>
			<url>https://github.com/vabhagurkar/demoTwitter/releases/tag</url>
		</repository>
	</distributionManagement>

	<scm>
		<connection>scm:git:https://github.com/vabhagurkar/demoTwitter.git</connection>
		<developerConnection>scm:git:https://github.com/vabhagurkar/demoTwitter.git</developerConnection>
		<tag>social_networking_app-0.0.5</tag>
	</scm>

	<build>
		<plugins>
			<plugin>
				<artifactId>maven-compiler-plugin</artifactId>
				<version>3.7.0</version>
				<configuration>
					<source>1.8</source>
					<target>1.8</target>
				</configuration>
			</plugin>
			 <plugin>
                <artifactId>maven-assembly-plugin</artifactId>
			    <executions>
			      <execution>
			        <phase>package</phase>
			        <goals>
			          <goal>single</goal>
			        </goals>
			      </execution>
			    </executions>
			    <configuration>
			      <archive>
			      <manifest>
			        <addClasspath>true</addClasspath>
                    <mainClass>com.social_ntw.app.App</mainClass>
			      </manifest>
			      </archive>
			      <descriptorRefs>
			        <descriptorRef>jar-with-dependencies</descriptorRef>
			      </descriptorRefs>
			    </configuration>
            </plugin>   
		</plugins>
	</build>

	<dependencies>
		<!-- https://mvnrepository.com/artifact/junit/junit -->
		<dependency>
			<groupId>junit</groupId>
			<artifactId>junit</artifactId>
			<version>4.12</version>
			<scope>test</scope>
		</dependency>
	</dependencies>
	
</project>